<body>
    <h3>Dkhal smiytk:</h3>
    <input type="text" id="nameInput" placeholder="Kteb hna...">
    <br>
    <button onclick="makeQR()">Tla3 QR Code</button>
    <div id="qrcode"></div>

    <script>
        var qrcode = new QRCode(document.getElementById("qrcode"), { width: 200, height: 200 });
        function makeQR() {
            var val = document.getElementById("nameInput").value;
            if(val) { qrcode.makeCode(val); }
        }
    </script>
